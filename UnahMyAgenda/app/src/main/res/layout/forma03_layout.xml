<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:id="@+id/root"
    >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10 AM"
            android:id="@+id/hora"
            android:textSize="20dp"
            android:layout_gravity="left|bottom"
            android:textStyle="bold"
            android:textColor="#ffff7100"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/scoresContainer"
            android:layout_toRightOf="@+id/hora"
            android:layout_toEndOf="@+id/hora"
            android:padding="10dp"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:id="@+id/classLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/hora"
                android:layout_alignLeft="@+id/scoresContainer"
                android:layout_alignStart="@+id/scoresContainer"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Clase A"
                    android:id="@+id/tituloClaseMateria"
                    android:textSize="20dp"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


</RelativeLayout>